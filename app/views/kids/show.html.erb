
<%if admin_signed_in? %>
	<%= render 'layouts/admin_menu2' %>

	<div class="row">
		<div class="col-sm-4 col-sm-offset-4">
			<h1><%= @kid.first %> <%= @kid.last %></h1>
			<h3><%= @kid.school %><br><%= @kid.age %> years old <h3>
		</div>
	</div>
	<br>
	<div class="col-sm-8 col-sm-offset-2">
		<hr class="divider">
	</div>
	<br>
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<% if @kid.scores.any? %>
		      <h3>Number of Tests (<%= @kid.scores.count %>)</h3><hr>
		      <% @scores = @kid.scores.all %>
		      <% @scores.each do |score| %>
				    <li>
				      <%= score.letter %>
				      <%= score.score %>
				    <hr>
		  		<% end %>
		  <% end %>
		</div>
	</div>
<% end %>

<% if kid_signed_in? %>
	<%= render 'layouts/kid_menu2' %>

<div class="kid_view">
	<div class="row">
		<div class="col-sm-4 col-sm-offset-4">
			<h1><%= current_kid.first %> <%= current_kid.last %></h1>
			<h3><%= current_kid.school %><br><%= current_kid.age %> years old <h3>
		</div>
	</div>
	<br>
	<div class="col-sm-8 col-sm-offset-2">
		<hr class="kid_divider">
	</div>
	<br>
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<% if current_kid.scores.any? %>
		      <h3>Number of Tests (<%= current_kid.scores.count %>)</h3><hr class="kid_divider_small">
		      <% @scores = current_kid.scores.all %>
		      <% @scores.each do |score| %>
				    <li>
				      <%= score.letter %>
				      <%= score.score %>
				    <hr class="kid_divider_small">
		  		<% end %>
		  <% end %>
		</div>
	</div>
</div>
<% end %>
